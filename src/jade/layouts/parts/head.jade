doctype html
head
	if page.title
		title #{page.title} | MyWeddingCalendar
	else if post.title
		title #{post.title} | MyWeddingCalendar
	else
		title MyWeddingCalendar
	link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" type="text/css")
	link(rel="stylesheet" href="/css/main.css" type="text/css")
	if utilities
		each file in utilities
			script(src="/js/#{file}.js")